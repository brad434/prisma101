generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  firstName String
  lastName String
  age Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  House House[]
}

model House {
  // uuid create an incremented number and letter list for better security
  id String @id @default(uuid())
  address String @unique
  wifiPassword String? 
  owner User @relation(fields: [ownerId], references: [id])
  ownerId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}